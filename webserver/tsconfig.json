{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "rootDir": "src",
        "outDir":"dist",
        "sourceMap": true,
		"target": "es6",
		"alwaysStrict": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}